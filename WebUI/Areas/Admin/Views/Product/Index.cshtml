@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<a class="btn btn-success float-end" href="/Admin/Product/Create">Yeni Ürün Ekle</a>
<h3>Ürünler</h3>
<br />

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Görsel</th>
                <th scope="col">Ürün Adı</th>
                <th scope="col">Ürün Fiyatı</th>
                <th scope="col">Stok</th>
                <th scope="col">Kategori</th>
                <th scope="col">Açıklama</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* @Url.Content("/images/" + item.Picture) *@
                    <td>@item.ID</td>
                    <td>
                        <img style="width:75px; height:75px" src="~/images/@item.Picture" alt="Ürün Görseli" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price ₺</td>
                    <td>@item.Stock</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="/Admin/Product/Delete/@item.ID" class="btn btn-danger">Sil</a>
                        <a href="/Admin/Product/Update/@item.ID" class="btn btn-warning">Düzenle</a>
                    </td>
                </tr>
            }   
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">Kayıt bulunamadı.</div>
}



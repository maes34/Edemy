@model Product
@{
    ViewData["Title"] = "Update";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@if (ViewBag.UpdateError != null)
{
    <div class="alert alert-danger">@ViewBag.UpdateError</div>
}

<a class="btn btn-danger float-end" href="/Admin/Product">Geri</a>
<h3>Ürün Güncelle @Model.Name</h3>

<img style="width:250px; height:105px" src="~/images/@Model.Picture" alt="Ürün Görseli" />


<form method="post" action="/Admin/Product/Update">
    <input type="hidden" name="ID" value="@Model.ID" />
    <div class="mb-3">
        <label class="form-label">Ürün Adı:</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Fiyat:</label>
        <input type="text" name="Price" value="@Model.Price" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Stok Adeti:</label>
        <input type="number" name="Stock" value="@Model.Stock" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Kategori:</label>
        <select class="form-select" name="CategoryId">
            <option value="">@Model.Category.Name</option>
         @foreach (var item in ViewBag.CategoryList)
          {
              if (Model.ID == item.ID)
              {
                  <option selected value="@item.ID">@item.Name</option>
              }
              else
              {
                  <option value="@item.ID">@item.Name</option>
              }
          }
        </select>
                </div>
    <div class="mb-3">
        <label class="form-label">Açıklama:</label>
        <textarea type="text" name="Description"  class="form-control">@Model.Description</textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Ürün Resmi:</label>
        <input type="file" name="picture" value="@Model.Picture" placeholder="Resim Seçiniz" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Ürün Ekle</button>
</form>


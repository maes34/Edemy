@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<a class="btn btn-success float-end" href="/Admin/Category/Create">Yeni Kategori Ekle</a>
<h3>Kategoriler</h3>
<br />

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col">Açıklama</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="/Admin/Category/Delete/@item.ID" class="btn btn-danger">Sil</a>
                        <a href="/Admin/Category/Update/@item.ID" class="btn btn-warning">Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else 
{
    <div class="alert alert-danger">Kayıt bulunamadı.</div>
}
<nav aria-label="Page navigation example">
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <li class="page-item active"><a class="page-link">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("Index", new {page = i})">@i</a></li>
            }
            
        }
    </ul>
</nav>




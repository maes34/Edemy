@model Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container mt-5">
        <div class="row">
            <!-- Ürün Resmi ve Detayları -->
            <div class="col-md-6">
            <img src="~/images/@Model.Picture" alt="Ürün Resmi" class="img-fluid">
            </div>

            <div class="col-md-6">
                <h2>@Model.Name</h2>
            <h4><strong>Fiyat: </strong>@Model.Price ₺</h4>
                <span><strong>Stok Durumu: </strong><span>@Model.Stock</span></span><br />
            <span>
                <strong><i class="fa-solid fa-circle-info"></i></strong>
                <span>
                    Son güncelleme tarihi: 03/2025
                </span>
            </span><br />
                <span>
                    <strong><i class="fa-solid fa-globe"></i></strong>
                    <span>
                        Türkçe
                    </span>
            </span><br />
            <span><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star-half-stroke"></i> <u>(1.603 puan)</u></span><br />
                <!-- Sepete Ekle Butonu -->
            <form action="/Cart/AddToCart" method="post">
                <input type="hidden" name="ID" value="@Model.ID" />
                    <input type="hidden" name="Name" value="@Model.Name" />
                    <input type="hidden" name="Price" value="@Model.Price" />
                    <input type="hidden" name="Stock" value="@Model.Stock" />
                <input class="btn btn-primary btn-lg mt-3" type="submit" value="Sepete Ekle" />
                </form>
                <a class="btn btn-outline-success btn-lg mt-3">Hemen kaydolun</a>
            <br />
                <span>
                *30 Gün İçinde Para İade Garantisi
                </span>
           
            </div>

        <ul class="nav nav-tabs mt-4" id="productTabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">Açıklama</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="installments-tab" data-toggle="tab" href="#installments" role="tab" aria-controls="installments" aria-selected="false">Taksit Seçenekleri</a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="productTabsContent">
            <!-- Açıklama Tabı -->
            <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                <p class="mt-3">
                    @(string.IsNullOrEmpty(Model.Description) ? "Açıklama Yok" : Model.Description)
                 
                </p>
            </div>

            <!-- Taksit Seçenekleri Tabı -->
            <div class="tab-pane fade" id="installments" role="tabpanel" aria-labelledby="installments-tab">
                <p class="mt-3">
                    <img class="img-fluid" src="https://i.hizliresim.com/34y3b74.png" />
                </p>
            </div>
        </div>
    </div>
        </div>